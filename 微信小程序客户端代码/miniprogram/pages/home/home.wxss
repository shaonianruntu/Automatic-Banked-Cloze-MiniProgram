/*摄像头区域*/
.camera-card {
  position: relative;
  margin: 32rpx 50rpx 0;
  height: 150rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 13rpx;
}
.camera-area{
  position: absolute;
  margin: 10rpx 10rpx 0;
  width: 630rpx;
  height: 130rpx;
  z-index: 1;
  border-radius: 13rpx;
}
/*捕捉图片区域*/
.photo-card{
  position: relative;
  margin: 20rpx 50rpx 0;
  height: 150rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 13rpx; 
}
.photo-area{
  position: absolute;
  margin: 10rpx 10rpx 0;
  width: 630rpx;
  height: 130rpx;
  max-height: 130rpx;
  z-index: 1;
  border-radius: 13rpx;
}


/*按钮区域*/
.button-area{
  position: relative;
  display: flex;
  margin: 30rpx 162rpx 30rpx;
  height: 126rpx;
}
/*摄像头按钮*/
.cameraButton-card{
  margin-left: 0rpx;
  width: 126rpx;
  height: 126rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx   rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}
.cameraButton-area{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 86rpx;
  height: 86rpx;
}
/*作弊用的按钮*/
.anotherButton-card{
  margin-top: 53rpx;
  width: 20rpx;
  height: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx   rgba(0, 0, 0, 0.3);
}
/*运行语言模型进行评估的按钮77*56*/
.answerButton-card{
  margin-right: 0rpx;
  width: 126rpx;
  height: 126rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx   rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}
.answerButton-area{
  position: absolute;
  top: 31rpx;
  left: 19rpx;
  width: 88rpx;
  height: 64rpx;
  opacity: 0.35;
}


/*ocr翻译区域*/
.trans-card{
  position: relative;
  margin: 0rpx 50rpx 0;
  padding: 10rpx 10rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 13rpx; 
}
.trans-placeHolder, .answer-placeHolder{
  font-size: 28rpx;
  position: absolute;
  width: 630rpx;
  height: 200rpx;
  z-index: 1;
  border-radius: 13rpx;
}
.trans-input{
  font-size: 30rpx;
  width: 630rpx;
  height: 200rpx;
}
.answer-input{
  font-size: 30rpx;
  width: 630rpx;
  height: 200rpx;
}
/*自动作答结果区域*/
.answer-card{
  position: relative;
  margin: 20rpx 50rpx 0;
  padding: 10rpx 10rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 13rpx; 
}


/*选择题答案显示*/
.result-card{
  position: relative;
  align-items: center;
  margin: 20rpx 50rpx 0;
  padding: 10rpx 10rpx;
  height: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 13rpx;  
}
.result-area{
  font-size: 30rpx;
  color: orangered
}




